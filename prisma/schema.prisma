generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String?
  email     String     @unique
  password  String?
  image     String?
  createdAt DateTime   @default(now())
  birthDate DateTime?
  sex       String?   
  weightKg  Float?    
  heightCm  Int?     
  
  workouts  Workout[]
  cardios   Cardio[]
}

model Workout {
  id        String   @id @default(uuid())
  title     String
  date      DateTime
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Cardio {
  id        String   @id @default(uuid())
  type      String
  duration  Int
  date      DateTime
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
